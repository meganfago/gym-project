<!DOCTYPE html>
<html>
  <head>
    <title>GymProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://afeld.github.io/emoji-css/emoji.css" rel="stylesheet">
    <%# <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous"> %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css" /> %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav>
  <div class="ui top fixed menu">
  <div class="item">
  <%= link_to root_path do %>
   <i class="em em-muscle"></i>
   <% end %>
  </div>
 
    <% if current_user %>
        <%= link_to("New Workout", new_workout_path, class: "item") %>
        <%= link_to("New Exercise", new_exercise_path, class: "item") %>
        <%= link_to("Exercises", exercises_path, class: "item") %>
        <%= link_to("Logout", logout_path, class: "item") %>
      <% else %>
        <%= link_to("Sign Up", new_user_path, class: "item") %>
        <%= link_to("Login", login_path, class: "item") %>
      <% end %>
      </div>
</nav>
      <div class="ui container main-content">
      <% if flash[:error] %>
        <p style="color: red">
          <%= flash[:error] %>
        </p>
      <% elsif flash[:notice] %>
        <p><%= flash[:notice] %></p>
      <% end %>
    
    <%= yield %>
    </div>
  </body>
</html>
