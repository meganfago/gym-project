<h1>Welcome to Strongify!</h1>
<% if @message %>
  <h2>Errors</h2>
  <p style="color: red"><%= @message %></p>
<% end %>
<div class="ui segment">
  <div class="ui two column very relaxed grid">
    <div class="column">
      <h3>Login</h3>
      <div class="ui form">
        <%= form_tag(login_path, html: {class: 'ui_form', } ) do %>
          <div class="fields">
            <div class="field"> 
            <%= label_tag("Username") %>
            <%= text_field_tag(:username) %>
            </div><br>
            <div class="field">
            <%= label_tag("Password") %>
            <%= password_field_tag(:password) %>
            </div><br>
          </div>
          <div class="ui centered grid">
            <div class="row">
              <button class="ui primary basic button">
                Login </button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="column">
      <ul>
        <li>Strongify lets you plan your workouts for the week</li>
        <li>Create and add new exercises to your workouts</li>
        <li>View and update your workout routine</li>
        <li><%= link_to "Click here to Sign Up", new_user_path %></li>
      </ul>
    </div>
  </div>
  <div class="ui vertical divider">Or</div>
</div>
